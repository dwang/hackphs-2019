{
    "name": "Postulating Posture",
    "version": "1.0",
    "manifest_version": 2,

    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches":["<all_urls>"],
        "css": ["blur.css", "unblur.css"],
        "js":["jquery-3.4.1.js","script.js"]
    }],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },

    "permissions": [
        "tabs",
        "activeTab",
        "http://*/",
        "https://*/"
    ]
}